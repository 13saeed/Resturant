@using Resturant.ViewModels;
@model AdminLoginViewModel;
@{
    ViewData["Title"] = "LoginAdmin";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account_box">
        <div class="text-center mb-2">
            <img src="~/img/admin.png" class="mx-auto" style="width: 120px;"
                 alt="Avatar" />
        </div>
        <h2 class="text-center mb-4 ">Login(Admin)</h2>
        <form asp-action="Login_Admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input class="btn btn-success w-100 p-2" type="submit" value="Login" />
            <div class="text-center">
                <a asp-controller="Home" asp-action="index" class="text-decoration-none mt-3">Back</a>

            </div>
        </form>
    </div>
</div>

@section ScriptS {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
